{
  "name": "eBay marker",
  "version": "0.1",
  "manifest_version": 2,

  "description": "Automatically mark the important words on eBay.",

  "permissions": [
    "storage",
    "tabs",
    "*://vi.raptor.ebaydesc.com/*",
    "*://*.ebay.com/*"
  ],

  "content_scripts": [
  {
    "matches": [
      "*://vi.raptor.ebaydesc.com/*", "*://*.ebay.com/*"
      ],
    "js": ["ebaymarker.js"],
    "css": ["ebaymarker.css"],
    "run_at": "document_end",
    "all_frames": true
  }
  ],


  "options_page" : "options.html"
}
